{
  "name": "vgl",
  "version": "0.0.1",
  "description": "Lightweight effects compositor on WebGL",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "demo": "cd demo && rollup -c && cd -",
    "watch:demo": "cd demo && rollup -c -w && cd -",
    "test:unit": "floss --path test/index.js",
    "test:build": "cd test && rollup -c && cd -",
    "test": "npm run test:build && npm run test:unit",
    "docs": "documentation build src/vgl.js -f html -o docs --shallow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ydaniv/vgl.git"
  },
  "keywords": [
    "webgl",
    "effects",
    "video",
    "canvas"
  ],
  "author": "Yehonatan Daniv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ydaniv/vgl/issues"
  },
  "homepage": "https://github.com/ydaniv/vgl#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "documentation": "^8.1.1",
    "electron": "^2.0.7",
    "floss": "^2.1.5",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-progress": "^0.4.0"
  }
}
